{
  "name": "simplingua-brain",
  "version": "0.1.0",
  "description": "Brain Server for Simplingua Platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.7.8",
    "@hono/node-server": "^1.14.0",
    "voltagent": "^1.0.0",
    "bcrypt": "^5.1.1",
    "jose": "^5.9.6",
    "zod": "^3.24.1",
    "ws": "^8.18.0",
    "node-cron": "^3.0.3",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/bcrypt": "^5.0.2",
    "@types/ws": "^8.5.13",
    "typescript": "^5.8.4",
    "tsx": "^4.19.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "eslint": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "hono",
    "typescript",
    "api",
    "brain-server",
    "simplingua"
  ],
  "license": "MIT"
}